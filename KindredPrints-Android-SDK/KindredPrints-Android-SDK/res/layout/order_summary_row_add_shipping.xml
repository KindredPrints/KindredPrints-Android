<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/order_summary_row_height"  >
    
    <com.kindredprints.android.sdk.customviews.PlusButtonView 
        android:id="@+id/cmdAddShipping"
        android:layout_width="@dimen/order_summary_edit_height"
        android:layout_height="@dimen/order_summary_edit_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/order_summary_blank_row_height" />
    
    <TextView
        android:id="@+id/txtShippingDescription"
       	android:layout_width="wrap_content"
       	android:layout_height="match_parent"
		android:layout_toRightOf="@+id/cmdAddShipping"
		android:layout_marginLeft="@dimen/order_summary_padding"
        android:gravity="center_vertical"
        android:textSize="@dimen/order_summary_text_size" 
        android:text="@string/shipping_add_title"
    />
 
</RelativeLayout>
